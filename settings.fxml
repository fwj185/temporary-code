<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.notepad1.SettingsController">
   <children>
      <!-- 设置标题栏 -->
      <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 20 20 10 20;">
         <children>
            <Label text="⚙" style="-fx-font-size: 24px; -fx-text-fill: #0078d4;" />
            <Label text="设置" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
         </children>
      </HBox>
      
      <!-- 设置内容区域 -->
      <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
         <content>
            <VBox spacing="20" style="-fx-padding: 20;">
               
               <!-- 外观设置 -->
               <VBox spacing="10">
                  <Label text="外观" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                  
                  <HBox alignment="CENTER_LEFT" spacing="10">
                     <Label text="应用主题:" />
                     <ComboBox fx:id="themeComboBox" prefWidth="200" />
                  </HBox>
               </VBox>
               
               <!-- 文本样式设置 -->
               <VBox spacing="10">
                  <Label text="文本样式" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                  
                  <HBox alignment="CENTER_LEFT" spacing="10">
                     <Label text="字体:" />
                     <ComboBox fx:id="fontFamilyComboBox" prefWidth="150" />
                  </HBox>
                  
                  <HBox alignment="CENTER_LEFT" spacing="10">
                     <Label text="字号:" />
                     <Spinner fx:id="fontSizeSpinner" prefWidth="80" />
                  </HBox>
                  
                  <HBox alignment="CENTER_LEFT" spacing="10">
                     <CheckBox fx:id="boldCheckBox" text="粗体" />
                     <CheckBox fx:id="italicCheckBox" text="斜体" />
                  </HBox>
                  
                  <!-- 新添加的复选框 -->
                  <CheckBox fx:id="applyToAllTabsCheckBox" text="应用到所有标签页" style="-fx-text-fill: #0078d4; -fx-font-weight: bold;" />
               </VBox>
               
               <!-- 打开和保存设置 -->
               <VBox spacing="10">
                  <Label text="打开和保存" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                  
                  <HBox alignment="CENTER_LEFT" spacing="10">
                     <Label text="默认编码:" />
                     <ComboBox fx:id="encodingComboBox" prefWidth="120" />
                  </HBox>
                  
                  <CheckBox fx:id="autoSaveCheckBox" text="自动保存" />
               </VBox>
               
               <!-- 时间设置 -->
               <VBox spacing="10">
                  <Label text="时间" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                  
                  <HBox alignment="CENTER_LEFT" spacing="10">
                     <Label text="时间格式:" />
                     <ComboBox fx:id="timeFormatComboBox" prefWidth="200" />
                  </HBox>
               </VBox>
               
            </VBox>
         </content>
      </ScrollPane>
      
      <!-- 按钮区域 -->
      <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 20; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
         <children>
            <Button fx:id="cancelButton" onAction="#handleCancel" text="取消" prefWidth="80" />
            <Button fx:id="applyButton" onAction="#handleApply" text="应用" prefWidth="80" style="-fx-background-color: #0078d4; -fx-text-fill: white;" />
         </children>
      </HBox>
   </children>
</VBox>